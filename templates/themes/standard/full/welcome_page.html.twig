{% extends '@ezdesign/pagelayout.html.twig' %}

{% trans_default_domain 'ezplatform_welcome_page' %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css?family=Work+Sans:400,500" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans:400" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    {{ encore_entry_link_tags('app_default') }}
{% endblock %}

{% block content %}
<header class="header pb-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="pl-3 pt-4">
                    <img src="data:image/svg+xml;base64,">
                </div>
            </div>
        </div>
    </div>
    <div class="container h-100 text-center text-white d-flex flex-column align-items-center justify-content-center">
        <h1>
            {{ ez_render_field(content, 'name') }}
            {{ constant('EzSystems\\EzPlatformCoreBundle\\EzPlatformCoreBundle::VERSION') }}
        </h1>
        <div class="pt-5">
            {{ ez_render_field(content, 'short_description') }}
            <p>{{ 'ezplatform_welcome_page.navigate_to'|trans({'%target%': project_dir})|desc('Navigate to: %target%') }}</p>

            {% set admin_url = url('ezplatform.dashboard', { 'siteaccess': 'admin' }) %}
            <p>
                {{ 'ezplatform_welcome_page.create_new_content_at'|trans({'%target%': '<a href="' ~ admin_url ~ '" class="text-white"><u>' ~ admin_url ~ '</u></a>' })
                |desc('Create new content at %target%')|raw }}
            </p>
        </div>
    </div>
</header>
<div class="page pb-5">
    <div class="container-fluid background-grey pt-4">
        <div class="row py-4">
            <div class="col-12 py-4">
                <div class="container text-center">
                    {{ ez_render_field(content, 'description') }}
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <div class="d-inline-flex flex-row align-items-baseline">
                    <div class="mr-4">
                        <img src="data:image/svg+xml;base64,">
                    </div>
                    <div>
                        <h2 class="mb-3">{{ 'ezplatform_welcome_page.documentation'|trans|desc('Documentation') }}</h2>
                        <ul class="list-unstyled">
                            <li>
                                <a href="https://ezplatform.com/documentation-center" target="_blank">
                                    {{ 'ezplatform_welcome_page.documentation_center'|trans|desc('Documentation center') }}
                                </a>
                            </li>
                            <li>
                                <a href="https://doc.ezplatform.com/projects/userguide" target="_blank">
                                    {{ 'ezplatform_welcome_page.user_documentation'|trans|desc('User documentation') }}
                                </a>
                            </li>
                            <li>
                                <a href="https://doc.ezplatform.com" target="_blank">
                                    {{ 'ezplatform_welcome_page.developer_documentation'|trans|desc('Developer documentation') }}
                                </a>
                            </li>
                            <li>
                                <a href="https://doc.ezplatform.com/projects/ezpersonalization" target="_blank">
                                    {{ 'ezplatform_welcome_page.ez_personalization_documentation'|trans|desc('eZ Personalization documentation') }}
                                </a>
                            </li>
                            <li>
                                <a href="https://doc.ez.no/commerce" target="_blank">
                                    {{ 'ezplatform_welcome_page.ez_commerce_documentation'|trans|desc('eZ Commerce documentation') }}
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mt-5 mt-md-0">
                <div class="d-inline-flex flex-row align-items-baseline">
                    <div class="mr-4">
                        <img src="data:image/svg+xml;base64," alt="live help icon">
                    </div>
                    <div>
                        <h2 class="mb-3">{{ 'ezplatform_welcome_page.tutorials_and_resources'|trans|desc('Tutorials and resources') }}</h2>
                        <ul class="list-unstyled">
                            <li>
                                <a href="https://doc.ezplatform.com/en/latest/getting_started/first_steps" target="_blank">
                                    {{ 'ezplatform_welcome_page.getting_started'|trans|desc('Getting started') }}
                                </a>
                            </li>
                            <li>
                                <a href="https://doc.ezplatform.com/en/latest/tutorials/platform_beginner/building_a_bicycle_route_tracker_in_ez_platform" target="_blank">
                                    {{ 'ezplatform_welcome_page.tutorials'|trans|desc('Tutorials') }}
                                </a>
                            </li>
                            <li>
                                <a href="http://doc.ezplatform.com/rest-api-reference" target="_blank">
                                    {{ 'ezplatform_welcome_page.rest_api_reference'|trans|desc('REST API reference') }}
                                </a>
                            </li>
                            <li>
                                <a href="https://doc.ezplatform.com/en/latest/api/public_php_api" target="_blank">
                                    {{ 'ezplatform_welcome_page.public_php_api'|trans|desc('Public PHP API') }}
                                </a>
                            </li>
                            <li>
                                <a href="https://doc.ezplatform.com/en/latest/api/graphql" target="_blank">GraphQL</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 mt-lg-0 mt-5">
                <div class="d-inline-flex flex-row align-items-baseline">
                    <div class="mr-4">
                        <img src="data:image/svg+xml;base64," alt="forum icon">
                    </div>
                    <div>
                        <h2 class="mb-3">{{ 'ezplatform_welcome_page.forums_and_community'|trans|desc('Forums and community') }}</h2>
                        <ul class="list-unstyled">
                            <li>
                                <a href="(https://discuss.ezplatform.com" target="_blank">
                                    {{ 'ezplatform_welcome_page.discussion_forum'|trans|desc('Discussion forum') }}
                                </a>
                            </li>
                            <li>
                                <a href="https://ez-community-on-slack.herokuapp.com/" target="_blank">
                                    {{ 'ezplatform_welcome_page.community_slack_channel'|trans|desc('Community Slack channel') }}
                                </a>
                            </li>
                            <li>
                                <a href="https://ez.no/Blog" target="_blank">
                                    {{ 'ezplatform_welcome_page.ez_blog'|trans|desc('eZ blog') }}
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<footer class="footer px-3 pb-3">
    <div class="container-fluid">
        <span class="copyright">
        {{ 'ezplatform_welcome_page.copyright'|trans({
            '%ez_link_open%': '<a class="ez-login__hyperlink" href="http://ez.no">',
            '%ez_link_close%': '</a>',
            '%current_year%': "now"|date("Y")
        }) |desc('eZ Platform ©1999-%current_year% %ez_link_open%eZ Systems AS%ez_link_close% and others.')|raw }}
        </span>
    </div>
</footer>
{% endblock %}
